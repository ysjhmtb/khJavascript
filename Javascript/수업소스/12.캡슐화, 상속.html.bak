 <h1>캡슐화와 상속</h1>
 <h3>캡슐화</h3>
 <p>객체의 정보를 속성이 아닌 지역변수로 저장</p>
 <button onclick="test1();">실행 확인</button>
 <div id="div1" class="area"></div>
 <script>
	function Idol(gname, mcount, mname){
		var groupName = gname;
		var memberCount = mcount;
		var memberName = mname;

		this.getGroupName = function(){
											return groupName;
										}
		this.getMemberCount = function(){
											return memberCount;
										}
		this.getMemberName = function(){
											return memberName;
										}
		this.setGroupName = function(gname){
											groupName = gname;
										}
		this.setMemberCount = function(mcount){
											memberCount = mcount;
										}
		this.setMemberName = function(mname){
											memberName = mname;
										}
	}
	function test1(){
		var name = "소녀시대";
		var count = 9;
		var names = ["태연", "윤아", "유리", "효연", "써니", "티파니", "수영", "제시카", "서현"];

		var girlsGeneration = new Idol(name, count, names);
		console.log(girlsGeneration);
		console.log(girlsGeneration.groupName);

		var $div1 = document.getElementById("div1");

		$div1.innerHTML += "그룹명 : " + girlsGeneration.getGroupName() + "<br>";
		$div1.innerHTML += "멤버수 : " + girlsGeneration.getMemberCount() + "<br>";
		$div1.innerHTML += "멤버이름 : " + girlsGeneration.getMemberName() + "<br>";
		
		girlsGeneration.setMemberCount(10);
		
		$div1.innerHTML += "그룹명 : " + girlsGeneration.getGroupName() + "<br>";
		$div1.innerHTML += "멤버수 : " + girlsGeneration.getMemberCount() + "<br>";
		$div1.innerHTML += "멤버이름 : " + girlsGeneration.getMemberName() + "<br>";
	}
 </script>
 <hr>

 <h3>상속</h3>
 <p>prototype - 원본 데이터(부모 데이터)</p>
 <button onclick="test2();">상속 버튼</button>
	<script>
		function Book(title, price, dc){
			var title = title;
			var price = price;
			var dc = dc;

			this.getTitle = function(){
				return title;
			}
			this.getPrice = function(){
				return price;
			}
			this.getDc = function(){
				return dc;
			}
			this.setTitle = function(title){
				title = title;
			}
			this.setPrice = function(price){
				if(price < 0){
					alert("가격을 다시 입력 하십시오.");
				}else{
					price = price;
				}
			}
			this.setDc = function(dc){
				if(dc < 0){
					alert("할인율을 확인하십시오.");
				}else{
					dc = dc;
				}
			}
		}
		Book.prototype.getSellPrice = function(){
														return this.getPrice() - (this.getPrice() * this.getDc());
													};
		function test2(){
			var book = new Book("자바의정석", 30000, 0.2);

			alert("책이름 : " + book.getTitle() + " / 판매 가격 : " + book.getSellPrice());
		}
	</script>
	<hr>
	<button onclick="test3();">자식 객체 추가</button>
	<script>
		function Novel(title, price, dc, type){
			this.base = Book;
			this.base(title, price, dc);

			var type = type;

			this.getType = function(){
										return type;
									}
			this.setType = function(type){
										type = type;
									}
		}
		Novel.prototype = Book.prototype;
		
		function test3(){
			var novel = new Novel("뇌", 20000, 0.1, "소설");
			alert("책제목 : " + novel.getTitle() + " / 판매 가격 : " + novel.getSellPrice() + " / 타입 : " + novel.getType());
		}

	</script>
